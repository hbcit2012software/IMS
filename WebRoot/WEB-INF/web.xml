<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<servlet>
		<servlet-name>DruidStatView</servlet-name>
		<servlet-class>com.alibaba.druid.support.http.StatViewServlet</servlet-class>
	</servlet>
  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>cn.edu.hbcit.servlet.TestServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>VerifyCodeServlet</servlet-name>
    <servlet-class>cn.edu.hbcit.servlet.VerifyCodeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>cn.edu.hbcit.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DemoUploadServlet</servlet-name>
    <servlet-class>cn.edu.hbcit.servlet.DemoUploadServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SelectMajors</servlet-name>
    <servlet-class>cn.edu.hbcit.servlet.SelectMajors</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddMajors</servlet-name>
    <servlet-class>cn.edu.hbcit.servlet.AddMajors</servlet-class>
  </servlet>






	<servlet-mapping>
		<servlet-name>DruidStatView</servlet-name>
		<url-pattern>/druid/*</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/servlet/TestServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>VerifyCodeServlet</servlet-name>
    <url-pattern>/patchca.png</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/servlet/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DemoUploadServlet</servlet-name>
    <url-pattern>/servlet/DemoUploadServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SelectMajors</servlet-name>
    <url-pattern>/servlet/SelectMajors</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddMajors</servlet-name>
    <url-pattern>/servlet/AddMajors</url-pattern>
  </servlet-mapping>
	<filter>
		<filter-name>DruidWebStatFilter</filter-name>
		<filter-class>com.alibaba.druid.support.http.WebStatFilter</filter-class>
		<init-param>
			<param-name>exclusions</param-name>
			<param-value>*.js,*.gif,*.jpg,*.png,*.css,*.ico,/druid/*</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>DruidWebStatFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	 <!--

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>cn.edu.hbcit.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
